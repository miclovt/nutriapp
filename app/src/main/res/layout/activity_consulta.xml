<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".consulta">
    android:layout_width="158dp"
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/idlong"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Longitud"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="56dp"
                android:layout_width="100dp" />

            <EditText
                android:id="@+id/idpeso"
                android:layout_width="160dp"
                android:layout_height="52dp"
                android:ems="10"
                android:hint="Peso"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="132dp" />

            <Button
                android:id="@+id/idcalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="214dp" />

            <TextView
                android:id="@+id/idresull"
                android:layout_width="158dp"
                android:layout_height="42dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="304dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph1"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph2"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph3"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph4"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph5"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph6"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph7"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph8"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph9"
                android:layout_width="match_parent"
                android:layout_height="200dip" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>